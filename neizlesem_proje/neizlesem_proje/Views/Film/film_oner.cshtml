@model neizlesem_proje.Models.Film
@{
    ViewBag.Title = "film_oner";
    Layout = "~/Views/Shared/_Layoutv2.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container" style="height:400px; width:600px;">
        <div class="container2" style="height:400px; width:600px;">
            <br>
            <br>
            <label class="welcome2" style="margin-left:230px;">FİLM ÖNER</label>
            <br />
            <hr style="width:50%; margin:auto; margin-top:10px;" />
