            </div>
            <br />

            <div class="form-group" style="text-align:center;">
                <label class="name"><b>Yıllar: </b></label>
                @Html.DropDownList("film_cikis_tarih", null, "Seçiniz", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.film_cikis_tarih, "", new { @class = "text-danger" })
            </div>
            <br />

            <div class="form-group" style="text-align:center;">
                <label class="name"><b>Puan: </b></label>
                @Html.DropDownList("puan", null, "IMDb puanı", htmlAttributes: new { @class = "form-control" })
