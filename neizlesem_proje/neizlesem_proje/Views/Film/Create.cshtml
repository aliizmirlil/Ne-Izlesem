@model neizlesem_proje.Models.Film

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layoutv2.cshtml";
}


@using (Html.BeginForm("Create","Film",FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="container" style="height:800px;">
        <div class="container2" style="height:800px;">
            <br>
            <br>
            <label class="welcome">FİLM KAYIT</label>
            <br />
            <hr style="width:50%; margin:auto; margin-top:10px;" />
            <br />
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="name"><b>Film adı: </b></label>
                <input type="text" placeholder="Film adı giriniz" name="film_adi" required />
                @Html.ValidationMessageFor(model => model.film_adi, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="name"><b>Özeti: </b></label>
                @Html.TextAreaFor(model => model.film_ozeti, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.film_ozeti, "", new { @class = "text-danger" })
            </div>
            <br />

            <div class="form-group">
                <label class="name"><b>Tür: </b></label>
                @Html.DropDownList("tur_no",null,"Seçiniz", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.tur_no, "", new { @class = "text-danger" })
            </div>
            <br />

            <div class="form-group">
                <label class="name"><b>Afiş: </b></label>
                @Html.TextBox("file","",new {type = "file"})
                @Html.ValidationMessageFor(model => model.film_afis, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <label class="name"><b>Film çıkış tarihi: </b></label>
                @Html.EditorFor(model => model.film_cikis_tarih, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.film_cikis_tarih, "", new { @class = "text-danger" })
            </div>
            <br />

            <div class="form-group">
                <label class="name"><b>Puan: </b></label>
                <input type="text" placeholder="Örn. 6,7" name="puan" required />
                <label class="uyari">@Html.ValidationMessageFor(model => model.puan, "", new { @class = "text-danger" })</label>
            </div>

            <div class="form-group">
                <label class="name"><b>Yönetmen: </b></label>
                @Html.DropDownList("yonetmen_no", null,"Seçiniz",htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.yonetmen_no, "", new { @class = "text-danger" })
            </div>
            <br />

            <div class="form-group">
                <label class="name"><b>Yıldızlar: </b></label>
                <input type="text" placeholder="örn:Keanu Reeves,Laurence Fishburne,Hugo Heaving,Carrie-Anne Moss" name="yildizlar" required />
                @Html.ValidationMessageFor(model => model.yildizlar, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" class="bttn" value="Kaydet">
            </div>
            <label class="uyari">@ViewBag.msg</label>
        </div>
    </div>
}


